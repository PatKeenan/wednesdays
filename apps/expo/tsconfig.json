{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./src",
    "types": ["nativewind/types", "node"],
    "paths": {
      "~/*": ["*"],
      "server/*": ["../../server/src/*"]
    }
  },
  "include": [
    "./**/*.ts",
    "./**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "exclude": ["node_modules", "build", "ios", "android"]
}
